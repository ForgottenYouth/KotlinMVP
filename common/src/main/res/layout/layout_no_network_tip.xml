<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ccf40b0b"
    android:orientation="horizontal"
    android:paddingRight="@dimen/padding_dp_10"
    android:paddingLeft="@dimen/padding_dp_10">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_warning" />

    <ImageView
        android:id="@+id/close"
        android:src="@drawable/icon_close"
        android:layout_width="@dimen/padding_dp_26"
        android:layout_height="@dimen/padding_dp_26"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon"
        android:layout_toLeftOf="@+id/close"
        android:padding="8dp"
        android:text="@string/network_error"
        android:textColor="#eee"
        android:textSize="@dimen/font_size_sp_14" />

</RelativeLayout>